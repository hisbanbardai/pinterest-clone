{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": "esm"
  },
  "scripts": {
    "start": "node dist/index.js",
