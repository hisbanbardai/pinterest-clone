    "prisma": "^6.9.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "@repo/eslint-config": "^0.0.0",
    "@repo/typescript-config": "^0.0.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@prisma/extension-accelerate": "^2.0.1",
    "@repo/zod": "*",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
