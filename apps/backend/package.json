    "tsup": "^8.5.0",
    "tsx": "^4.20.3"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@prisma/extension-accelerate": "^2.0.1",
    "express": "^5.1.0",
    "imagekit": "^6.0.0",
    "@repo/zod": "*"
  }
