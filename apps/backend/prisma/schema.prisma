generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  firstName String
  lastName String
  email String
  password String
  image String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  pins Pins[]
}

model Pins {
  id String @id @default(uuid())
  imageUrl String
  title String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user Users @relation(fields: [userId], references: [id])
}
